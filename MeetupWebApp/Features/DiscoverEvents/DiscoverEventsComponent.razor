@page "/"
@using System.Web
@using MudBlazor
@rendermode InteractiveServer
@inherits BaseComponent

@inject DiscoverEventsService DiscoverEventsService
@inject NavigationManager NavigationManager
@inject SharedHelper SharedHelper

<h3>Discover Events</h3>

@if(events is not null && events.Count > 0)
{
    <div class="row g-3">
        @foreach (var ev in events)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a href="/events/@ev.Id" style="text-decoration:none;">
                        <div class="card border-0">
                            <img src="@ev.ImageUrl" alt="@ev.Title" class="rounded" />
                            <p class="text-muted mt-1 mb-0">@($"{ev.BeginDate:ddd MMM d}  {ev.BeginTime:h:mm tt}")</p>
                            <p class="card-title fw-bold" >@ev.Title</p>
                        </div>
                    </a>
            </div>
        }
    </div>
}
else
{
    <p><text>Loading...</text></p>
}


@code {

    public List<EventViewModel>? events { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        events = await DiscoverEventsService.GetEventsAsync(await SharedHelper.GetParamValueAsync("search"));
    }

}
